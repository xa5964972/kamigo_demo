    <script type="text/javascript">
        var ele; //用於獲取元件
        var resultOfExp;
        /*清空所有內容*/
        function clearAll() {
            ele = document.getElementById("金額");
            ele.value = "";
            ele = document.getElementById("金額")
            ele.value = "";
        }

        /*將按鈕對應的符號組合成表示式*/
        function inputExp(symbol) {
            ele = document.getElementById("金額");
            ele.value += symbol;
        }

        function inputExp1(symbol) {
            ele = document.getElementById("分類");
            ele.value = symbol;
        }

        function inputExp2(symbol) {
            ele = document.getElementById("收支");
            ele.value = symbol;
        }

        /*計算出結果*/
        function giveResult() {
            ele = document.getElementById("金額");
            resultOfExp = eval(ele.value);
            ele = document.getElementById("金額");
            ele.value = resultOfExp;
        }

        /*逐個刪除*/
        function deleteSymbol() {
            ele = document.getElementById("金額");
            var exp = ele.value;
            var end = exp.length - 1;
            exp = ele.value.slice(0, end);
            ele.value = exp;
        }




    </script>
